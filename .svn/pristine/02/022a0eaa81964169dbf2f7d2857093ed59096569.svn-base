<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<body>
	<h1>연수과정 페이지</h1>

<table class="table">
	<thead class="table-dark">
		<tr>
			<th>연수과정번호</th>
			<th>시작일</th>
			<th>종료일</th>
			<th>이름</th>
			<th>호실</th>
			<th>담임</th>
		</tr>
	</thead>
	<tbody>
		<c:set value="${svlfList }" var="svlfList"/>
		<c:choose>
			<c:when test="${empty svlfList }">
				<tr>
					<td colspan="6">조회할 게시물이 없습니다.</td>
				</tr>
			</c:when>
			<c:otherwise>
				<c:forEach items="${svlfList }" var="svlf">
					<tr>
						<td>${svlf.svlfNo }</td>
						<td>${svlf.svlfBgngDt }</td>
						<td>${svlf.svlfDdlbDt }</td>
						<td>
							<a href="/emp/svlf/svlfDetail?svlfno=${svlf.svlfNo }">
								${svlf.svlfNm }
							</a>
						</td>
						<td>${svlf.lectureRoomNm }</td>
						<td>${svlf.userNm }</td>
					</tr>
				</c:forEach>
			</c:otherwise>
		</c:choose>
	</tbody>
</table>
<div>
	<button type="button" class="btn btn-success" id="svlfBtn">연수과정 생성</button>
</div>

<script type="text/javascript">
$(function(){
	var svlfBtn = $("#svlfBtn");

	svlfBtn.on("click", function(){
		location.href = "/emp/svlf/svlfForm";
	})
})
</script>
</body>