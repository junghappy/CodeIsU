/* 프로젝트 지원 신청 */
function insertAply(data) {

	$.ajax({
		url : "/pms/insertaply",
		type : "post",
		data : JSON.stringify(data),
		dataType : "text",
		contentType : "application/json; charset=utf-8",
		beforeSend: function(xhr) {
			xhr.setRequestHeader(header, token);
		},
		success : function(res) {

			alert("프로젝트 지원 성공!!")
			projList();
			$("#insertProjModal").modal("hide");
		},
		error : function(xhr){
			alert(xhr.status);
		}
	})
}




