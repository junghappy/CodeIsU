// 날짜 수정
function convertDate(Cdate) {
  const year = Cdate.substring(0, 4);
  const month = Cdate.substring(4, 6);
  const day = Cdate.substring(6, 8);
  const formattedDate = year + "-" + month + "-" + day;
  return formattedDate;
}

