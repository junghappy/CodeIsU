// 담당자 리스트 AG그리드때 사용
const getAsgList = (asgList) => {
  let taskPics = "";

  for (let i = 0; i < asgList.length; i++) {
    taskPics += asgList[i].userNm + " ";
  }
  console.log(taskPics);
  return taskPics;
};

// 담당자 array 수정 모달에서 사용
const getAsgArray = (asgList) => {
  let taskPics = [];

  for (let i = 0; i < asgList.length; i++) {
    taskPics.push(asgList[i].userNm);
  }
  console.log(taskPics);
  return taskPics;
};

