<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<div class="card">
    <div class="card-body">
        <h3 class="fw-bold mb-4">질문답변</h3>
        <div class="cd mb-4">
            <div class="row mb-3">
                <div class="col-1 align-middle">
                    <img src="${qstn.stuProfile}" class="avatar avatar-sm rounded-circle me-2" width="40" height="40">
                </div>
                <div class="col-8 fs-6 d-flex align-items-center">                                                                                                                   
                    ${qstn.stuNm}
                </div>
                <div class="col-3 text-end text-muted fs-6 d-flex align-items-center">                                                                                                                   
                    ${qstn.qstnDt}
                </div>
            </div>                                                                                                                                       
            <div class="row">
                <div class="col">
                    ${qstn.qstnTtl}                                                                                                                             
                </div>                                                                            
            </div>
            <div class="row">
                <div class="col">
                    ${qstn.qstnCn}                                                                                                                             
                </div>                                                                            
            </div>
        </div>
        
        <div class="card border shadow-none">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-1 align-middle">
                        <img src="${qstn.empProfile}" class="avatar avatar-sm rounded-circle me-2" width="40" height="40">
                    </div>
                    <div class="col-10 fs-6 d-flex align-items-center">                                                                                                                   
                        ${qstn.empNm}
                    </div>
                    <div class="col-1 text-end">
                        <c:if test = "${qstn.qstnAns ne null && qstn.qstnAns ne ''}">
                            <button type="button" class="btn border-0 shadow-none" data-bs-toggle="dropdown" aria-expanded="false">
                                <i data-feather="more-vertical" class="feather-icon"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" onclick="updateAsmt(${qstn.qstnNo})">수정</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" onclick="deleteAsmt(${qstn.qstnNo})">삭제</a></li>
                            </ul>
                        </c:if>
                    </div>
                </div>
                <div class="col-8">
                    ${qstn.qstnAnsDt}
                </div>
                <div class="row">
                    <div id="editor"></div>
                    <!--등록되어있으면-->
                    <c:if test = "${qstn.qstnAns ne null && qstn.qstnAns ne ''}">
                        <div class="col-11" id="qstnAns">
                            ${qstn.qstnAns}
                        </div>
                    </c:if>
                </div>
            </div>
        </div>

        <div id="editor"></div>
        <div class="text-end">
            <button type="button" class="btn btn-primary" id="enrollBtn">등록</button>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor.css"/>
<script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>
<script>
    feather.replace();
    var qstnAns = "${qstn.qstnAns}"
    var qstnNo = "${qstn.qstnNo}";
    // 답변 안달았으면 등록하도록
    if(qstnAns == null || qstnAns == ""){
        // 에디터 생성
        const Editor = toastui.Editor;
        const editor = new Editor({
            el: document.querySelector('#editor'),
            toolbarItems: [ // 사용할 기능 커스텀 - 파일업로드 삭제
            ['heading', 'bold', 'italic', 'strike'],
            ['hr', 'quote'],
            ['ul', 'ol', 'task', 'indent', 'outdent'],
            ['table', 'code', 'codeblock']
        ],
        height: '300px',
        initialEditType: 'wysiwyg',
        previewStyle: 'vertical'
        });
    }

    // 답변 달았을 때 수정
    function updateAsmt(qstnNo){
        var qstnAns = document.querySelector("#qstnAns");
        var qstnAnsValue = qstnAns.value;
        qstnAns.remove();

        // 에디터 생성
        const Editor = toastui.Editor;
        const editor = new Editor({
            el: document.querySelector('#editor'),
            toolbarItems: [ // 사용할 기능 커스텀 - 파일업로드 삭제
            ['heading', 'bold', 'italic', 'strike'],
            ['hr', 'quote'],
            ['ul', 'ol', 'task', 'indent', 'outdent'],
            ['table', 'code', 'codeblock']
        ],
        height: '300px',
        initialEditType: 'wysiwyg',
        previewStyle: 'vertical'
        });
        
        editor.setHTML(qstnAnsValue);

        document.querySelector("#enrollBtn").value = "수정"
    }
    

    
